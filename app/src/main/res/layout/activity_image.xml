<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ImageActivity">

    <ImageView
        android:id="@+id/img_select"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:scaleType="fitCenter"/>
    <LinearLayout
        android:id="@+id/layout_bot"
        android:background="@drawable/function_color"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <Button
            android:id="@+id/btn_fiximage"
            android:background="@drawable/ic_edit"
            android:layout_margin="30dp"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <Button
            android:id="@+id/btn_delimage"
            android:layout_margin="30dp"
            android:background="@drawable/ic_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <Button
            android:id="@+id/btn_infoimage"
            android:layout_margin="30dp"
            android:background="@drawable/ic_share"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <Button
            android:id="@+id/btn_setava"
            android:layout_margin="30dp"
            android:background="@drawable/ic_avatar"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </LinearLayout>

</RelativeLayout>